@page
@model IndexModel
@{
    ViewData["Title"] = "Photo Album";
}
<header>
    
    <h1 class="title"> My Photo Album</h1>
    <style>
        .title{
		text-align:center;
       
	    }
	    *{
		    font-family: 'Quicksand', sans-serif;
	    }
	    body{
		background-color: #F8F9FA;
	    }

        .card-body p{
           text-align: center;
        }
        
        button {
            text-align: center;
        }
        
    </style>
</header>
<body>
<div class="album py-5">
<div class="container">
    
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
            <div class="card shadow-sm">
                    <img src="Resources/Images/test2.jpg" alt="Logo_1" class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%"></rect><img>

                <div class="card-body">
                    <p class="card-text"><strong>NBA Players</strong></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-page="/Nbaplayers">View</a>
                        </div>
                        <small class="text-muted">20 images</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm">
                    <img src="Resources/Images/test2.jpg" alt="Logo_1" class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%"></rect></img>
                    
                <div class="card-body">
                    <p class="card-text" asp-area="" asp-page="/Nbateams" ><strong>NBA Teams</strong></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-page="/Nbateams">View</a>
                        </div>
                        <small class="text-muted">20 images</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card shadow-sm">
                    <img src="Resources/Images/test2.jpg" alt="Logo_1" class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%"></rect></img>

                <div class="card-body">
                    <p class="card-text"><b>NBA Shoes</b></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-page="/NBAshoes">View</a>
                        </div>
                        <small class="text-muted">20 images</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm">
                    <img src="Resources/Images/game4.jpg" alt="Logo_1" class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%"></rect></img>

                <div class="card-body">
                    <p class="card-text"><strong>Mobile Games</strong></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-page="/MobileGames">View</a>
                        </div>
                        <small class="text-muted">20 images</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow-sm">
                    <img src="Resources/Images/valorant3.jpg" alt="Logo_1" class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%"></rect></img>

                <div class="card-body">
                            <p class="card-text"><strong>Valorant Agents</strong></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                             <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-page="/ValorantAgents">View</a>
                        </div>
                        <small class="text-muted">20 images</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</body>
